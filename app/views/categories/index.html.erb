<p style="color: green"><%= notice %></p>

<% content_for :title, "Categories" %>

<h1>Categories (<%= @categories_count %>)</h1>

<div class="searchbar">
  <%= form_with url: categories_path, method: :get, local: true do |f| %>
    <%= f.text_field :q, placeholder: "Search category...", value: params[:q] %>
    <%= image_submit_tag("icons/search.svg", alt: "Search") %>
  <% end %>
</div>

<% if @categories_count > 30 %>
  <div class="add-item">
    <%= link_to "New category", new_category_path %>
  </div>
<% end %>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
  <% end %>
</div>

<div class="add-item">
  <%= link_to "New category", new_category_path %>
</div>

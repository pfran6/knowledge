<div class="form">
  <%= form_with(model: content) do |form| %>
    <% if content.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

        <ul>
          <% content.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :slug, style: "display: block" %>
      <%= form.text_field :slug %>
    </div>

    <div>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description %>
    </div>

    <div>
      <%= form.label :content_type_id, style: "display: block" %>
      <%= form.collection_select :content_type_id, ContentType.all, :id, :title, { prompt: "Choose content type" } %>
    </div>

    <div>
      <%= form.label :body, style: "display: block" %>
      <%= form.rich_text_area :body %>
    </div>

    <div>
      <%= form.label :attachements, style: "display: block" %>
      <%= form.file_field :attachements %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
